<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".create.CreateStoryBoardActivity">

    <include
        android:id="@+id/top_bar"
        layout="@layout/activity_top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="142dp"
        app:layout_constraintBottom_toTopOf="@+id/connection_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="436dp"
        android:layout_height="81dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="80dp"
        android:background="@color/background"
        android:minHeight="578dp"
        android:padding="20dp"
        android:scrollbars="vertical"
        android:textColor="@color/textColorClick"
        app:layout_constraintBottom_toBottomOf="@+id/file_name"
        app:layout_constraintEnd_toStartOf="@+id/image_available" />

    <TextView
        android:id="@+id/image_available"
        android:layout_width="635dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal|top"
        android:text="@string/image_not_available_on_screen"
        android:textAlignment="center"
        android:textColor="@color/textColorClick"
        android:textSize="@dimen/simple_cms"
        app:layout_constraintBottom_toTopOf="@+id/file_name"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/connection_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/ic_status_connection_red"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal|top"
        app:layout_constraintBottom_toTopOf="@+id/file_name_title"
        app:layout_constraintEnd_toEndOf="@+id/image_available"
        app:layout_constraintTop_toBottomOf="@+id/top_bar" />

    <TextView
        android:id="@+id/file_name_title"
        android:layout_width="250dp"
        android:layout_height="28dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal|top"
        android:text="@string/file_name_example"
        android:textAlignment="center"
        android:textColor="@color/textColorClick"
        android:textSize="@dimen/primary_text_font_size"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/butt_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toEndOf="@+id/butt_shapes"
        app:layout_constraintTop_toBottomOf="@+id/connection_status" />


    <TextView
        android:id="@+id/file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="78dp"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal|top"
        android:text="@string/file_name"
        android:textAlignment="center"
        android:textColor="@color/textColorClick"
        android:textSize="@dimen/primary_text_font_size"
        android:visibility="invisible"
        app:layout_constraintBaseline_toBaselineOf="@+id/file_name_title"
        app:layout_constraintEnd_toStartOf="@+id/butt_save"
        app:layout_constraintHorizontal_bias="0.768"
        app:layout_constraintStart_toEndOf="@+id/butt_location" />

    <Button
        android:id="@+id/butt_save"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="112dp"
        android:background="@drawable/button_primary"
        android:elevation="8dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/button_save"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/primary_text_font_size"
        app:layout_constraintBottom_toTopOf="@+id/butt_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cancel"
        app:layout_constraintTop_toBottomOf="@+id/file_name_title" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginStart="732dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/button_primary"
        android:elevation="8dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/button_cancel"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/primary_text_font_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/butt_save"
        app:layout_constraintEnd_toStartOf="@+id/butt_save"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/butt_location"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:layout_marginStart="389dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/button_location"
        android:elevation="8dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/button_location"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/button_text_font_size"
        app:layout_constraintBottom_toTopOf="@+id/butt_graphics"
        app:layout_constraintEnd_toStartOf="@+id/butt_movements"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butt_save" />

    <Button
        android:id="@+id/butt_movements"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:layout_marginEnd="341dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_movement"
        android:elevation="8dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/button_movements"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/button_text_font_size"
        app:layout_constraintBottom_toTopOf="@+id/butt_shapes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/butt_location" />

    <Button
        android:id="@+id/butt_graphics"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:layout_marginStart="257dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/button_graphic"
        android:elevation="8dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/button_graphics"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/button_text_font_size"
        app:layout_constraintEnd_toStartOf="@+id/butt_shapes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butt_location" />

    <Button
        android:id="@+id/butt_shapes"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/button_shapes"
        android:elevation="8dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/button_shapes"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/button_text_font_size"
        app:layout_constraintBottom_toBottomOf="@+id/butt_graphics"
        app:layout_constraintEnd_toStartOf="@+id/butt_description"
        app:layout_constraintStart_toEndOf="@+id/butt_graphics" />

    <Button
        android:id="@+id/butt_description"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:layout_marginEnd="215dp"
        android:layout_marginBottom="124dp"
        android:background="@drawable/button_description"
        android:elevation="8dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/button_description"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/button_text_font_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/butt_shapes"
        app:layout_constraintTop_toTopOf="@+id/butt_shapes"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>